<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>URL Shortener</title>
  </head>
  <body class="bg-primary-subtle">
    <div class="container">
      <h1 class="text-center">URL SHORTENER</h1>
      <form action="/shortUrl" method="post" class="my-4 form-inline d-flex">
        <input
          type="url"
          name="fullUrl"
          id="fullUrl"
          placeholder="Url"
          required
          class="form-control col mr-2"
        />
        <button type="submit" class="btn btn-primary mx-3">Shorten</button>
      </form>

      <table class="table table-striped table-responsive rounded">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td>
              <a href="<%= shortUrl.full %>"> <%= shortUrl.full %> </a>
            </td>
            <td>
              <a href="<%= shortUrl.short %>"> <%= shortUrl.short %> </a>
            </td>
            <td><%= shortUrl.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
